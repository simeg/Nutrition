<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.nutrition.activities.FoodDetailActivity.FoodDetailFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/detail_textview_name"
            android:maxHeight="150dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="50dp">

        <!-- Row 3 with 2 columns -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/detail_textview_energykj" android:text="@string/fragment_detail_energy_kj"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip" android:gravity="left"/>

            <TextView
                android:id="@+id/detail_textview_energykj_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_energykcal"
                android:text="@string/fragment_detail_energy_kcal"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/detail_textview_energykcal_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_protein"
                android:text="@string/fragment_detail_protein"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/detail_textview_protein_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_fat"
                android:text="@string/fragment_detail_fat"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/detail_textview_fat_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_carbohydrates"
                android:text="@string/fragment_detail_carbohydrates"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/detail_textview_carbohydrates_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_fibres"
                android:text="@string/fragment_detail_fibres"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/detail_textview_fibres_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_salt"
                android:text="@string/fragment_detail_salt"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_textview_salt_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_water"
                android:text="@string/fragment_detail_water"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_textview_water_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/detail_textview_alcohol"
                android:text="@string/fragment_detail_alcohol"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_textview_alcohol_value"
                android:layout_weight="10"
                android:padding="10dip"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorite_btn_add"
        android:id="@+id/detail_button_favorite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

</RelativeLayout>
